<h1>New message</h1>

<% form_for(@message) do |f| %>
  <%= error_messages_for :topic %>
  <%= error_messages_for :message %>
 
	<div>
		<%= f.label :topicName, "Title:" %><br />
		<%= text_field :topic, :topicName %>
		<%= f.text_field :messageCreator, :value=>$userName %>
		
	</div>
  
  <p>
    <%= f.label :messageBody, "Message:" %>
	
	<%= f.text_field :messageTime, :value=> Time.now %> <br/>
	
    <%= f.text_area :messageBody %>
  </p>
  <p>
    <%= submit_tag 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', messages_path %>