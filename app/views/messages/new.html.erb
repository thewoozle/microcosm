<h1>New message</h1>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>
 
	<div>
		<%= f.label :messageTopic, "Title:" %><br />
		<%= f.text_field :messageTopic %>
		<span ><%= $userName %></span>
		</div
	</div>
  
  <p>
    <%= f.label :messageBody, "Message:" %>
	<% t = Time.now %>
	
	<%= f.text_field :messageTime, :value=> t %> <br/>
	
    <%= f.text_area :messageBody %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', messages_path %>