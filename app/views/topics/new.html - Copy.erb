<h1>New topic</h1>

<% form_for :topic,  :url=>{ :action =>"new_topic", :controller =>"main"}  do |f| %>


  <%= f.error_messages %>

  <p>
    <%= f.label :topicName %><br />
    <%= f.text_field :topicName %>
	
  </p>
  
  <div>
		<%= f.label :messageTopic %><br />
		<%= text_field :message, :messageTopic %>
		<div>
		<%= f.label :messageCreator %><br />
		<%= text_field :message, :messageCreator %>
		</div>
	</div>
  
  <p>
    <%= f.label :messageBody %><br />
    <%= text_area :message, :messageBody %>
  </p>
  
  
  
  
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', topics_path %>