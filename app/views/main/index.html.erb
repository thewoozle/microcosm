	<!--	main body of MICROCOSM page. Called by main.html.erb (layout)	-->
		<div id="transfer_form">
		
		</div>	
	<div id="wrapper" class="silver_border faded_background">
		<div id="header">
			<div id="control_panel">
				<h1 class="headline_font"><%=@title%></h1>					
				<DIV ID="log_in">
					<% if !session[:id] %>
						<%= render :partial =>"login" %>
					<% else %>	
						<%= render :partial =>"loggedin" %>
					<% end %>	
				</div>
				<div id="topic_list_container"
					<h2 id="topic_title" class="headline_font">Topics</h2> 
					<div id="topic_list" class="silver_border">					
						<% if session[:id] %>
							<%= render :partial=>"topics/topics" %>
						<% else %>
							<p>Login to view topics</p>
						<% end %>	
					</div>	
				</div>	
				<% if flash[:notice] %>
					<div class="login_error error">
						<%= flash[:notice] %>
					</div>
				<% end %>	
				
			</div>	<!--	end control_panel -->	
		</div>		<!--	end header -->
		
		<div id="content">
			<div id="topic_container">	
				<div id="left_topic" class="topic silver_border faded_background">				
					<% if $leftTopicId && session[:id]  %>		
						<%@topicId = $leftTopicId %>
						<%@side = 'left' %>
						<%= render :partial=> "/topics/show_topic"  %>
					<% end %>	
				</div>	
		
				<div id="right_topic" class="topic silver_border faded_background">			
					<% if $rightTopicId && session[:id]  %>			
						<%@topicId = $rightTopicId %>	
						<%@side = 'right' %>			
						<%= render :partial=> "/topics/show_topic"  %>
					<% end %>							
				</div>
			</div>	<!-- end of topic_container -->	
		</div>	<!-- end content	-->			
</div>
	</div>	<!--	end wrapper -->	
	
	
	
	
	<div id="footer" >
